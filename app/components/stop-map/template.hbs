{{#each stops as |stop|}}

  {{#geojson-layer
    icon=stopStationIcon
    geoJSON=stop.geometry
    clickable=true
    draggable=false
    riseOnHover=true
    riseOffset=1000
    onMouseover=(action "selectStop" stop)
    onMouseout=(action "unselectStop" stop)
    onClick=(action "setOnestopId" stop)
  }}
  {{/geojson-layer}}

  {{#each stop.stop_platforms as |stop_platform|}}
    {{#geojson-layer
      icon=(div-icon html=stop_platform.html className=stop_platform.icon_class iconSize=stop_platform.icon_size)
      geoJSON=stop_platform.geometry
      clickable=true
      draggable=false
      riseOnHover=true
      riseOffset=1000
      onMouseover=(action "selectStop" stop_platform)
      onMouseout=(action "unselectStop" stop_platform)
      onClick=(action "setOnestopId" stop_platform)
    }}
    {{/geojson-layer}}
  {{/each}}

  {{#each stop.stop_egresses as |stop_egress|}}
    {{#geojson-layer
      icon=(div-icon html=stop_egress.html className=stop_egress.icon_class iconSize=stop_egress.icon_size)
      geoJSON=stop_egress.geometry
      clickable=true
      draggable=false
      riseOnHover=true
      riseOffset=1000
      onMouseover=(action "selectStop" stop_egress)
      onMouseout=(action "unselectStop" stop_egress)
      onClick=(action "setOnestopId" stop_egress)
    }}
    {{/geojson-layer}}
  {{/each}}

  {{#polygon-layer locations=stop.stationPlatformLines color="red"}}
    Platforms
  {{/polygon-layer}}

  {{#polygon-layer locations=stop.stationEgressLines color="blue"}}
    Egresses
  {{/polygon-layer}}

{{/each}}
